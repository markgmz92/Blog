				<div class="form-control2 sm_style">
				<%= f.select :country,
				options_for_select(['Malaysia','Singapore','Australia','United Kingdom']),
						prompt: 'Select your country' %>
				</div>

				<%= f.submit 'Submit', class:"btn btn-light my-2 my-sm-0" %>
				<% end %>

