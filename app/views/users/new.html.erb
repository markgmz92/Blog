<div class="row" style="padding-top:0%;">
<div class="col"></div>
<div class="col-md-4">

<h1> Create an Account</h1>
<%= form_for @user do |f| %>
	<div class="field" style="100%;">
<!-- Checking for Errors -->
<% if @user.errors.any? %>
<div id="Error_explanation">
	<h2>
		<%= pluralize(@user.errors.count, "error") %>
		prohibited this article from being saved:
	</h2>
		<p>
			<ul>
			<% @user.errors.full_messages.each do |msg| %>
			<li>
				<%= msg %>
			</li>
		</ul>
			<% end %>
		</p>
	</div>
	<% end %><!-- end for checking errors -->

	<%= f.text_field :userid, placeholder: 'Input a User ID', id:"User", class: 'form-control' %><br>
	<%= f.email_field :email, placeholder: 'Input your email', id:"email", class: 'form-control' %><br>
	<%= f.password_field :password, placeholder: 'Create a password', id:"password", class: 'form-control' %><br>
	<%= f.password_field :password_confirmation, placeholder:'Confirm Password', id:"confirm_password", class: 'form-control' %><br>
	<%= f.submit 'Create Account'%><br>
	<% end %>
</div>

<p>
	<%= link_to 'Article', articles_path, class: 'btn btn-md btn-info'%>
	<%= link_to 'Home', welcome_index_path, class: 'btn btn-md btn-primary' %>
</p>

</div><!--col-md-10-->
<div class="col"></div>
</div><!--row-->