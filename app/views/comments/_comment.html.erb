
<h2> Comments </h2>
	<% @article.comments.each do |comment| %>
	<p>
		<strong>Commenter:</strong>
		<%= comment.commentor %>
	</p>
	<p>
		<%= comment.created_at %>
	</p>
	<p><strong>Comment</strong>
		<%= comment.body %>
	</p>

	<p>
		<%= link_to 'Delete Comment', [comment.article, comment],
				class: 'btn btn-md btn-danger',
				method: :Delete,
				data: {confirm: 'Are you sure?'} %>
	</p>
	<% end %>